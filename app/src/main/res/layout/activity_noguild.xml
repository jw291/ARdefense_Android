<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Noguild"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/guildbackground">

    <TextView
        android:gravity="center"
        android:textColor="#4da9f9"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="길드에 참여하세요!!"/>
    <Button
        android:background="#a7934a"
        android:layout_marginTop="20dp"
        android:id="@+id/guildmake"
        android:text="길드 만들기"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:textColor="#ffffff"
        android:textSize="20dp"/>


    <Button
        android:background="#a7934a"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/guildlist"
        android:text="길드 목록 보기"
        android:layout_width="200dp"
        android:layout_height="120dp" />

</LinearLayout>